= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :birth_date
    = f.date_select :birth_date
    .field
      = f.label :phone
      = f.text_field :phone    
  .field
    = f.label :enable
    = f.check_box :enable
  .actions
    = f.submit 'Save'
